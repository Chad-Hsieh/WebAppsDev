<!DOCTYPE html>
<html>
  <head>
    <title>AlohaAuth<%= " | "+yield(:title) unless yield(:title).blank? %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--Begin Flash Message-->
    <div id="flash-messages" class="row">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == 'notice' ? 'primary' : 'danger' %> alert-dismissable col" role="alert">
          <%= msg %>
          <button type="button" class="class" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>
    <!--End Flash Message-->
    
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <%= link_to "Aloha", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <%= nav_link "Home", root_path %>
          <%= nav_link "About", about_path %>
          <%= nav_link "Photos", photos_path %>
        </ul>
      </div>
    </nav>

    <main role="main" class="container">
      <% if @show_title %>
      <div id="title" class="row">
        <div class="col">
          <h1><%= yield(:title) %></h1>
        </div>
      </div>
      <% end %>
      <%= yield %>
    </main>
    
  </body>
</html>

<!--For each pages and include header and footer here-->